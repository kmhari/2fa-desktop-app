{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "2FA Auth",
  "version": "0.2.0",
  "identifier": "com.2faauth.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "2FA Auth",
        "width": 360,
        "height": 520,
        "resizable": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyMjNGMEJGNjE4RkYwOEYKUldTUDhJOWh2L0FqUWkyMG5JSXdxVEVpVitqdllNcHlDZjBkUENOUjBNY3lyZmlsZnM4dCtDejYK",
      "endpoints": [
        "https://github.com/kmhari/2fa-desktop-app/releases/latest/download/latest.json"
      ]
    }
  }
}
